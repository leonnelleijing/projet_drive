<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home</welcome-file>
        <welcome-file>vue/Home.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/vue/Home.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Article</servlet-name>
        <jsp-file>/vue/Article.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Choix_Lieu_Horaire</servlet-name>
        <jsp-file>/vue/Choix_Lieu_Horaire.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletAfficherMagasin</servlet-name>
        <servlet-class>com.samrtsolutions.drive.controler.ServletAfficherMagasin.java</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Choix_Lieu_Horaire</servlet-name>
        <url-pattern>/choix_Lieu_Horaire</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAfficherMagasin</servlet-name>
        <url-pattern>/servletAfficherMagasin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
